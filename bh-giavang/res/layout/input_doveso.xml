<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/deco_2"
    android:paddingBottom="@dimen/space_view_input"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

    <LinearLayout
        android:id="@+id/temp2"
        style="@style/form_fw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_view_input"
        android:weightSum="100" >

        <RelativeLayout
            android:id="@+id/lichDen_p"
            style="@style/form_ww"
            android:layout_width="0dp"
            android:layout_weight="45"
            android:background="@drawable/drop_bg" >

            <TextView
                android:id="@+id/lichDen"
                style="@style/cal_input"
                android:text="12/04/2014" />

            <ImageView
                android:id="@+id/templine"
                style="@style/drop_line"
                android:layout_toLeftOf="@+id/tempcal" />

            <ImageView
                android:id="@+id/tempcal"
                style="@style/temp_cal" />
        </RelativeLayout>
        
         <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="10" />

        <RelativeLayout
            android:id="@+id/temp1"
            style="@style/form_ww"
            android:layout_width="0dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="45"
            android:background="@drawable/drop_bg" >

            <TextView
                android:id="@+id/sp1"
                style="@style/cal_input"
                android:text="@string/tinhthanhpho" />

            <ImageView
                android:id="@+id/templine"
                style="@style/drop_line"
                android:layout_toLeftOf="@+id/tempcal" />

            <ImageView
                android:id="@+id/tempcal"
                style="@style/temp_cal"
                android:src="@drawable/arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/temp3"
        style="@style/form_ww"
        android:layout_below="@+id/temp2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/space_view_input" >

        <TextView
            style="@style/text_input"
            android:layout_gravity="center_vertical"
            android:text=""
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        style="@style/form_fw"
        android:layout_below="@+id/temp3"
        android:orientation="horizontal"
        android:weightSum="100" >

        <EditText
            style="@style/ed_input"
            android:id="@+id/ed"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="45"
            android:hint="Sá»‘" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="10" />

        <TextView
            style="@style/submit_input"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="45"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>