<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/u"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        style="@style/text_dialog"
        android:layout_gravity="center_horizontal"
        android:text="ten local"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffffff" />

    <TableLayout style="@style/form_fw" >

        <TableRow
            style="@style/form_fw"
            android:orientation="horizontal"
            android:weightSum="100" >

            <View
                android:layout_width="3dp"
                android:layout_height="5dp"
                android:layout_weight="20" />

            <TextView
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="37"
                android:gravity="center_horizontal"
                android:text="Hôm nay" />

            <TextView
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="6"
                android:gravity="center_horizontal" />

            <TextView
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="37"
                android:gravity="center_horizontal"
                android:text="Hôm qua" />
        </TableRow>

        <TableRow
            style="@style/form_fw"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="20"
                android:gravity="center_horizontal"
                android:text="Mua" />

            <TextView
                android:id="@+id/mua_homnay"
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="37"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/ssmua"
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="6"
                android:text="="
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/mua_homqua"
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="37"
                android:gravity="center_horizontal" />
        </TableRow>

        <TableRow
            style="@style/form_fw"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="20"
                android:gravity="center_horizontal"
                android:text="Bán" />

            <TextView
                android:id="@+id/ban_homnay"
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="37"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/ssban"
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="6"
                 android:text="="
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/ban_homqua"
                style="@style/text_dialog"
                android:layout_gravity="center_horizontal"
                android:layout_weight="37"
                android:gravity="center_horizontal" />
        </TableRow>
    </TableLayout>

</LinearLayout>