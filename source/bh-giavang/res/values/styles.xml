<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_top" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="btn_top">
        <item name="android:layout_margin">7dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="rel_top">
        <item name="android:background">@drawable/bg_top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/top_heigh</item>
    </style>

    <style name="btn_tab">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bg_tab_giavang</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="text_dialog" parent="@style/text">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnertv" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/cbb</item>
        <item name="android:textColor">#324f85</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="them_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="them_text" parent="@style/text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4c566c</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>

    <style name="them_arrow" parent="@style/form_ww">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/arrow</item>
    </style>

    <style name="line_setting">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/cam</item>
    </style>

</resources>